<?xml version="1.0" encoding="utf-8" ?>
<ContentPage Visual="Material" xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="diplom.Views.DealInformationPage"
             Title="Информация о задаче">
    
    <ContentPage.Content>
        <StackLayout Padding="20" x:Name="stackDeal" Spacing="10">

            <Entry x:Name="entryNote" Placeholder="Заметки" FontSize="16" Text="{Binding Note}"/>
            <Entry x:Name="entryName" Placeholder="Название" FontSize="16" Text="{Binding Name}"/>
            
            <Picker x:Name="pickerImportance" Title="Степень важности" SelectedItem="{Binding SelectedImportance}" ItemDisplayBinding="{Binding Level}"/>
            <Picker x:Name="pickerStatus" Title="Статус" SelectedItem="{Binding SelectedStatus}" ItemDisplayBinding="{Binding Name}"/>

            <Label Text="Момент создания" FontSize="20" Margin="0,10,0,10"/>
            <StackLayout Orientation="Horizontal">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" VerticalOptions="CenterAndExpand" Text="Дата " FontSize="16"/>
                    <DatePicker Grid.Column="1" HeightRequest="50" x:Name="datapickerCreation" Date="{Binding DateOfCreation}" FontSize="16"/>
                    <Label Grid.Column="2" VerticalOptions="CenterAndExpand" Text="Время " FontSize="16" Margin="10,0,0,0"/>
                    <TimePicker Grid.Column="3" x:Name="timepickerCreation" Time="{Binding DateOfCreation}" Format="H:mm" />
                </Grid>
            </StackLayout>
            
            <Label Text="Срок выполнения" FontSize="20" Margin="0,10,0,10"/>
            <StackLayout Orientation="Horizontal">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" VerticalOptions="CenterAndExpand" Text="Дата " FontSize="16"/>
                    <DatePicker Grid.Column="1" HeightRequest="50" x:Name="datapickerDeadline" Date="{Binding Deadline}" FontSize="16"/>
                    <Label Grid.Column="2" VerticalOptions="CenterAndExpand" Text="Время " FontSize="16" Margin="10,0,0,0"/>
                    <TimePicker Grid.Column="3" x:Name="timepickerDeadline" Time="{Binding Deadline}" Format="H:mm" />
                </Grid>
            </StackLayout>

            <StackLayout Orientation="Horizontal">
                <Label VerticalOptions="CenterAndExpand" Text="Уведомление " FontSize="16"/>
                <CheckBox IsChecked="{Binding Notification}" x:Name="checkboxNot"/>
            </StackLayout>

            <Button Text="Изменить" Clicked="SaveButton_Clicked" />
                
        </StackLayout>
    </ContentPage.Content>
    
</ContentPage>