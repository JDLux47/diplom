<?xml version="1.0" encoding="utf-8" ?>
<ContentPage Visual ="Material" xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:local="clr-namespace:diplom.Interface"
             x:Class="diplom.Views.BudgetPage">
    
    <ContentPage.Resources>
        <local:TypeConverter x:Key="TypeConverter" />
        <local:CategoryConverter x:Key="CategoryConverter"/>
    </ContentPage.Resources>

    <ContentPage.ToolbarItems>
        <ToolbarItem Order="Secondary" Text="Добавить" Clicked="AddButton_Clicked"/>
    </ContentPage.ToolbarItems>

    <CollectionView x:Name="transactionsView" Margin="20" SelectionMode="Single" SelectionChanged="OnSelectionChanged">

        <CollectionView.ItemsLayout>
            <LinearItemsLayout Orientation="Vertical" ItemSpacing="10"/>
        </CollectionView.ItemsLayout>
        
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame CornerRadius="10" Padding="10" Margin="5" HasShadow="True">
                    <Frame.Triggers>
                        <DataTrigger TargetType="Frame" Binding="{Binding Type}" Value="-1">
                            <Setter Property="BackgroundColor" Value="Crimson" />
                        </DataTrigger>
                        <DataTrigger TargetType="Frame" Binding="{Binding Type}" Value="1">
                            <Setter Property="BackgroundColor" Value="Green" />
                        </DataTrigger>
                    </Frame.Triggers>
                    <StackLayout Orientation="Horizontal">
                        <Label Text="{Binding CategoryId, Converter={StaticResource CategoryConverter}}" FontSize="Small" />
                        <Label Text="{Binding Sum}" FontSize="Small" />
                        <Label Text="{Binding Date, StringFormat='{0:dd.MM.yyyy}'}" FontSize="Small" />
                        <ImageButton Source="trash.png" 
                                     BackgroundColor="Transparent" 
                                     Clicked="DeleteButton_Clicked" 
                                     CommandParameter="{Binding .}"
                                     WidthRequest="30" HeightRequest="30" 
                                     Aspect="AspectFit" 
                                     HorizontalOptions="EndAndExpand" 
                                     CornerRadius="30"/>
                    </StackLayout>
                </Frame>    
            </DataTemplate>
        </CollectionView.ItemTemplate> 
        
    </CollectionView>
</ContentPage>