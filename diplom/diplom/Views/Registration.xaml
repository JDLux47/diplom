<?xml version="1.0" encoding="utf-8" ?>
<ContentPage Visual="Material" xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="diplom.Views.Registration">

    <CollectionView>

        <CollectionView.ItemTemplate>
            <DataTemplate>
                <StackLayout Padding="20">
                    <Entry x:Name="entryName" Placeholder="Name"/>
                    <Entry x:Name="entryLogin" Placeholder="Login"/>
                    <Entry x:Name="entryPassword" Placeholder="Password" IsPassword="True" />
                    <Entry x:Name="entryBalance" Placeholder="Balance" Keyboard="Numeric" />

                    <Button Text="Register" Clicked="Register_Clicked" />
                </StackLayout>
            </DataTemplate>
        </CollectionView.ItemTemplate>
        
    </CollectionView>
</ContentPage>